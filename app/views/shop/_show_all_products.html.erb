	<div class="media">
		<div class="media-body">
			<table class ="table table-hover">
				<thead>
					<th>Produktname</th>
					<th>Preis</th>
					<th>Beschreibung</th>
					<th>Bild</th>
					<th></th>
				</thead>

				<% @products.each do |product|%>
				<tr>
					<td><%=product.name%></td>
					<td><%=product.price%></td>
					<td><%=product.description%></td>
					<td><%=image_tag product.pro_picture_url(:thumb) %></td>
					<td><%= link_to "In den Warenkorb", add_pro_to_stock_path(pro_id: product.id), class: "btn btn-mini btn-success" %></td>
				</tr>
				<%end%>
			</table>
		</div>
	</div>