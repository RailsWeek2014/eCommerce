<input type="button" value="show Users" class="btn btn-success" onclick="show_users()" />

<div id="show_all_users" class="media"  style="display:none">
	
	<table class="table table-hover">

		<% @users.each do |user|%>
			<tr>
				<td><%=user.email%></td>
				<td><%=link_to "User Bearbeiten", edit_user_path(user.id), class: "btn btn-primary" %></td>
			</tr>
		<%end%>

	</table>
</div>


<script type="text/javascript">
	function show_users(){
		var div_box = document.getElementById('show_all_users');
		if(div_box.style.display=='none'){
			
		  		$("#show_all_users").show();
			
		}else{
			$(function() {
		  		$("#show_all_users").hide();
			});
		}
	}

</script>